  0%
    left 0%
    width 0%
  25%
    left 0%
    width 20%
  50%
    left 25%
    width 50%
  75%
    left 80%
    width 20%
  100%
    left 100%
    width 0%
.ui-loader.ui-loader-progress-line
  height 6px
  width 100%
  position relative
  &:before
