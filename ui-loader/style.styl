:root
  --bg #009688
  --main #80fff2
  --ui-loader-size 60px
  // --bg #000
  // --main #009688

@keyframes rainbow
  0%
    filter hue-rotate(0deg)
  100%
    filter hue-rotate(360deg)

body
  margin 0
  background var(--bg)
  display flex
  flex-direction column
  height 100vh
  position relative
  overflow hidden
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background var(--bg)
  &.rainbow:not(.rainbow-sync)
    &:before
      animation rainbow 30s linear infinite
  &.ui-loader-rainbow:not(.rainbow-sync)
    .ui-loader
      animation ui-loader-rainbow 10s linear infinite
  &.rainbow-sync
    &:before
    .flex-box
      animation rainbow 30s linear infinite
  &>*
    position relative
.flex-box
  display flex
  align-items center
  justify-content center
  flex auto
  gap 64px
  flex-wrap wrap
  align-content center
  max-height calc(100vh - 128px)
  overflow auto
  padding 64px

.controller
  display flex
  padding 32px
  gap 16px
  background #888
  color #fff
  overflow auto hidden
  max-height 111px
  white-space nowrap
  .input
    display flex
    flex-direction column
    gap 4px
    label
      font-size 12px
    input
      margin 0
    #size
      padding 4px
    [type="checkbox"]
      height 27px
      width 27px
  .flex
    flex auto
  .author
    flex 0 0 auto
    display flex
    align-items center
    justify-content flex-end
    gap 8px
    color #fff
    text-decoration none
    transition .1s filter
    &:hover
      filter drop-shadow(0 0 8px #0008)
    .avatar
      height 32px
      width 32px
      border-radius 100%

