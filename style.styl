body
  margin 0
  background #000
  color #eee

a
  color #eee

*
  box-sizing border-box

h1
  font-size s("max(min(130px, 14vw), 60px)")
  margin 0 20px
  color #555

.modules
  max-width 100vw
  width 1200px
  margin auto
  padding 0 40px
  a
    display block
    color #aaa
    text-decoration none
    font-size s("max(min(100px, 14vw), 40px)")
    font-weight bold
    line-height 1
    margin-bottom 10px
    .code
      font-weight normal
      font-size s("max(min(24px, 2vw), 20px)")
      font-style italic
    &:hover
      color #eee

footer
  padding 20px
  .avatar
    height 32px
    width 32px
    border-radius 100%
  .author
    display inline-flex
    align-items center
    gap 8px
    text-decoration none
    transition .1s filter
    &:hover
      filter drop-shadow(0 0 10px #fff)